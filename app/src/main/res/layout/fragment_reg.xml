<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.androidhive.bukutamu.fragments.RegFragment">

    <LinearLayout
        android:id="@+id/atas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor :"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="1"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Datang"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tgl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28-06-2017"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
        <ScrollView
            android:layout_below="@id/atas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/card"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_card"/>
            <EditText
                android:id="@+id/namatamu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Tamu"/>
            <EditText
                android:id="@+id/ketemu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ketemu Siapa"/>
            <EditText
                android:id="@+id/unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bagian/Unit"/>
            <EditText
                android:id="@+id/tujuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tujuan"/>
            <EditText
                android:id="@+id/perusahaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Perusahaan"/>
            <EditText
                android:id="@+id/handphone"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nomor Handphone"/>
            <EditText
                android:id="@+id/alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alamat"/>
            <EditText
                android:id="@+id/catatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Catatan"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/ulang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ULANG"/>
                    <Button
                        android:id="@+id/simpan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SIMPAN"/>
                </LinearLayout>
             </LinearLayout>
        </ScrollView>
</RelativeLayout>
